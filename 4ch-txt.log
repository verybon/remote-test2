<script>
    (function(){
        var bt_hidden_text1 = document.querySelectorAll( ".content-01 .hidden-text" );
        var bt_hidden_text2 = document.querySelectorAll( ".content-02 .hidden-text" );
        var bt_answer = document.querySelector( ".page-02 .button-answer" );
        for (var i = 0; i < bt_hidden_text1.length; i++){
            bt_hidden_text1[i].addEventListener( "click", clickAct1 );
        }
        for (var i = 0; i < bt_hidden_text2.length; i++){
            bt_hidden_text2[i].addEventListener( "click", clickAct2 );
        }
        function clickAct1(e){
            if( document.querySelectorAll( ".hidden-text.on" ).length >= bt_hidden_text1.length - 1 ){
                bt_answer.classList.add( "on" );
                bt_answer.querySelector( ".text" ).innerHTML = "버튼 가리기"
            }
        }
        function clickAct2(e){
            if( document.querySelectorAll( ".hidden-text.on" ).length >= bt_hidden_text2.length - 1 ){
                bt_answer.classList.add( "on" );
                bt_answer.querySelector( ".text" ).innerHTML = "버튼 가리기"
            }
        }
    })();
</script>
